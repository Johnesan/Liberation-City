    <Grid VerticalOptions="Center" Margin="20" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0" Grid.Column="0" Source="facebookSquare.png" HorizontalOptions="End">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding facebookCommand}"/>
            </Image.GestureRecognizers>
        </Image>

        <Image Grid.Row="0" Grid.Column="2" Source="twitterSquare.png" VerticalOptions="Center" HorizontalOptions="Start">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding twitterCommand}"/>
                </Image.GestureRecognizers>
            </Image>

        <Image Grid.Row="1" Grid.Column="0"   Source="youtubeSquare.png" VerticalOptions="Center" HorizontalOptions="End">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding instagramCommand}"/>
                </Image.GestureRecognizers>
            </Image>

        <Image Grid.Row="1" Grid.Column="2" Source="instagramSquare.png" VerticalOptions="Center" HorizontalOptions="Start">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding youtubeCommand}"/>
            </Image.GestureRecognizers>
        </Image>
    </Grid>
